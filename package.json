{
  "name": "stylelint-webpack-plugin",
  "version": "0.13.0",
  "publishConfig": {
    "tag": "next"
  },
  "description": "A stylelint plugin for webpack",
  "license": "MIT",
  "repository": "webpack-contrib/stylelint-webpack-plugin",
  "author": "Javier Sánchez-Marín <javiersanchezmarin@gmail.com>",
  "homepage": "https://github.com/webpack-contrib/stylelint-webpack-plugin",
  "bugs": "https://github.com/webpack-contrib/stylelint-webpack-plugin/issues",
  "main": "index.js",
  "engines": {
    "node": ">= 6.9.0"
  },
  "scripts": {
    "commitlint": "commitlint",
    "lint": "eslint --cache lib test",
    "ci:lint:commits": "commitlint --from=${CIRCLE_BRANCH} --to=${CIRCLE_SHA1}",
    "lint-staged": "lint-staged",
    "release": "standard-version",
    "release:ci": "conventional-github-releaser -p angular",
    "release:validate": "commitlint --from=$(git describe --tags --abbrev=0) --to=$(git rev-parse HEAD)",
    "test": "cross-env mocha",
    "test:watch": "echo 'Jest Not Implemented'",
    "test:coverage": "echo 'Jest Not Implemented'",
    "ci:lint": "npm run lint && npm audit",
    "ci:test": "npm run test -- --runInBand",
    "ci:coverage": "npm run test:coverage -- --runInBand",
    "defaults": "webpack-defaults"
  },
  "files": [
    "lib/",
    "index.js"
  ],
  "keywords": [
    "stylelint",
    "lint",
    "linter",
    "node-sass",
    "webpack",
    "plugin",
    "webpack-plugin"
  ],
  "peerDependencies": {
    "stylelint": "^13.0.0",
    "webpack": "^4.0.0"
  },
  "dependencies": {
    "arrify": "^2.0.1",
    "micromatch": "^4.0.2",
    "object-assign": "^4.1.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.8.4",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "@webpack-contrib/eslint-config-webpack": "^3.0.0",
    "acorn": "^7.1.1",
    "babel-jest": "^25.2.6",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "chai": "^4.0.2",
    "conventional-github-releaser": "^3.1.3",
    "coveralls": "^3.0.11",
    "cross-env": "^7.0.2",
    "del": "^5.1.0",
    "del-cli": "^3.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "memory-fs": "^0.5.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.2",
    "standard-version": "^7.1.0",
    "stylelint": "^13.3.0",
    "testdouble": "^3.13.1",
    "webpack": "^4.42.1",
    "webpack-defaults": "^4.0.0"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  }
}
